<div class="search__box">
  <h4>Looking for an event</h4>
  <%= render 'shared/search' %>
</div>

<div class="container__featured">
  <h5>Top Activities</h5>
    <div class="card__grid">
      <% @activities[0..3].each do |activity| %>
        <div class="card__event">
          <div class="card__event__content">
            <%= link_to activity.title, activity_path(activity) %>
          </div>
        </div>
      <% end %>
    </div>
</div>


<div class="events__upcoming">
  <div class="card__grid">
      <% @activities.each do |activity| %>
      <div class="card__event">
        <div class="card__event__content">
          <%= link_to activity.title, activity_path(activity) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
