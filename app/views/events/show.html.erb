
<div class="container__dashboard">
  <div class="event-description-side">
    <div class="breadcrumb">
      <%= link_to itineraries_path do %>
        <i class="fas fa-angle-left"></i>
        Back
      <% end %>
    </div>

    <div>
      <h3><%= @event.title %></h3>
    </div>
    <!-- Event Description Placeholder -->
    <div class="event-description-block">
      <div class="banner__image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
               url('<%= image_path @event.activity.photo %>')">
      <!-- Placeholder! Carousel of Event Images -->
      </div>
      <h4>Event Description</h4>
      <p><%= @event.description %></p>
        <p>Dates:
          <%= @event.start_date.strftime("%d %b %Y") %> to
          <%= @event.end_date.strftime("%d %b %Y") %>
        </p>
      <p>Maximum spots: <%= @event.max_spots %></p>
      <p>Location: <%= @event.location.city %>, <%= @event.location.country %></p>
    </div>

    <div>
      <h6>Reviews from previous travel mates</h6>
    </div>
  </div>

  <div class="event-description-side">

    <div>
      <!-- Owner Description -->
      <h6>About the organiser</h6>
      <div>
        <!-- Owner Card -->
        <div>
          <div>
            <!-- Owner Top Card -->
            <div>
              <p><%= rand(0..5) %>/5 ⭐️</p>
            </div>
            <div>
              <div>
                <!-- Owner Description Info -->
                <p><%= @event.itinerary.user.first_name %></p>
                <p><%= @event.itinerary.user.date_of_birth %></p>
                <p><%= @event.itinerary.user.gender %></p>
              </div>
              <!-- Owner avatar -->
              <div><%= image_tag "captain_cat.jpg", class: "avatar" %></div>
            </div>
          </div>
          <div>
            <!-- Owner description paragraph -->
            <p><%= @event.itinerary.user.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>







