<!-- http://localhost:3000/itineraries/21/events/new -->
<div class="container d-flex flex-column">
  <div class="d-flex justify-content-center">
    <h2><strong>Add event details</strong></h2>
  </div>
  <div class="d-flex justify-content-center">
    <p>Draft the most amazing description to attract fellow travellers to join</p>
  </div>
  <div>
    <%= link_to "Back to itinerary", itinerary_path(@itinerary), class: 'btn btn-primary'%>
  </div>
</div>

<div class="container d-flex flex-column">
  <%= simple_form_for [@itinerary, @event] do |f|  %>
    <%= f.input :title, label: "Event name", error: 'Please provide an event name' %>
      <div class="container d-flex justify-content-start">
        <%= f.label :city %>
          <div class="p-2">
            <%= f.collection_select :location_id, Location.all, :id, :city %>
          </div>
            <%= f.label :activity %>
          <div class="p-2">
            <%= f.collection_select :activity_id, Activity.all, :id, :title %>
          </div>
      </div>
            <%= f.input :max_spots, input_html: { min: '0', step: '1' }, error: 'Please provide number of mates required' %>
          <%= f.input :start_date, as: :datetime, order: [:day, :month, :year, :hour, :minute], required: true, start_year: Date.today.year, error: 'Start date can not be in the past'%>
        <%= f.input :end_date, as: :datetime, order: [:day, :month, :year, :hour, :minute], required: true, start_year: Date.today.year, error: 'End date can not be earlier than start date' %>
      <%= f.input :description, error: 'Please provide a description' %>
    <%= f.submit "Save", class: 'btn btn-primary' %>
  <% end %>
</div>

