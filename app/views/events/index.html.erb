
<div class="search__box">
  <h4>Looking for an event</h4>
  <%= render 'shared/search' %>
</div>

<div class="map">
  <%= render 'shared/map' %>
</div>


<div class="container__featured">
  <h5>Featured Events</h5>
    <div class="card__grid">
      <% @events[0..2].each do |event| %>
        <div class="card__event">
          <div class="card__event__content">
            <p><%= event.start_date.strftime("%d %b %Y") %></p>
            <h6><%= event.title %></h6>
            <p><%= event.location.city%>,<%= event.location.country %></p>
          </div>
          <div class="card__event__button">
            <p>button placeholder</p>
          </div>
          <div data-event-id="<%= event.id %>" class="event-heart-icon">
            <%= render 'heart', event: event %>
          </div>
        </div>
      <% end %>
    </div>

</div>


<div class="events__upcoming">
  <div class="card__grid">
      <% @events.each do |event| %>
      <div class="card__event">
        <div class="card__event__content">
          <p><%= event.start_date.strftime("%d %b %Y") %></p>
          <h6><%= event.title %></h6>
          <p><%= event.location.city%>,<%= event.location.country %></p>
        </div>
        <div class="card__event__button">
          <p>button placeholder</p>
        </div>
        <div data-event-id="<%= event.id %>" class="event-heart-icon">
          <%= render 'heart', event: event %>
        </div>
      </div>
    <% end %>
  </div>
</div>
