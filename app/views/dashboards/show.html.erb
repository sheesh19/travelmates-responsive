<h3>Your dashboard</h3>

<div class="nav-dash">
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active dash-inner-nav" id="pills-events-tab" data-toggle="pill" href="#pills-events" role="tab" aria-controls="pills-events" aria-selected="true">Upcoming Events (<%= @total_events %>)</a>
    </li>
    <li class="nav-item">
      <a class="nav-link  dash-inner-nav" id="pills-open-tab" data-toggle="pill" href="#pills-open" role="tab" aria-controls="pills-open" aria-selected="false">Open listing ()</a>
    </li>
    <li class="nav-item">
      <a class="nav-link dash-inner-nav" id="pills-favourites-tab" data-toggle="pill" href="#pills-favourites" role="tab" aria-controls="pills-favourites" aria-selected="false">Favourites (<%= @favorite_itineraries.count + @event_favorites.count %>)</a>
      <!-- count will need updating once favourite events and users are added -->
    </li>
    <li class="nav-item">
      <a class="nav-link dash-inner-nav" id="pills-followers-tab" data-toggle="pill" href="#pills-followers" role="tab" aria-controls="pills-follower" aria-selected="false">Followers(placeholder count)</a>
      <!-- count will need updating once favourite events and users are added -->
    </li>
  </ul>

  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-events" role="tabpanel" aria-labelledby="pills-events-tab">
      <%= render 'upcoming_events' %>
    </div>
    <div class="tab-pane fade" id="pills-open" role="tabpanel" aria-labelledby="pills-open-tab">
      <%= render 'open_listings' %>
    </div>
    <div class="tab-pane fade" id="pills-favourites" role="tabpanel" aria-labelledby="pills-favourites-tab">
      <%= render 'favorites' %>
    </div>
    <div class="tab-pane fade" id="pills-followers" role="tabpanel" aria-labelledby="pills-followers-tab">
      <%= render 'followers' %>
    </div>

  </div>
</div>
