<div class="page-container">

  <h2>Sign up!</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  label_html: { class: "form-title" },
                  input_html: { autocomplete: "First Name" }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  label_html: { class: "form-title" },
                  input_html: { autocomplete: "Last Name" }%>

      <%= f.file_field :avatar,
                  input_html: { autocomplete: "Profile Picture" },
                  label_html: { class: "form-title" }%>
      <br><br>
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  label_html: { class: "form-title" },
                  input_html: { autocomplete: "username" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label_html: { class: "form-title" },
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  label_html: { class: "form-title" },
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label_html: { class: "form-title" },
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-outlined"%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
