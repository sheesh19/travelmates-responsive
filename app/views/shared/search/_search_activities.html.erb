<div class="search__box">
  <div class="search-banner justify-content-center">
    <!-- Search bar -->
    <div class="search-banner-text"><h1><strong>Try new activities<strong></h1></div>
    <div class="index-search">
      <%= form_tag(activities_path, method: :get, placeholder: "Search activities") do %>
        <%= text_field_tag :query %>
        <%= link_to request.path do %>
          <i class="far fa-times-circle"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  </div>
<div>

<!-- Displays search results dynamically -->
<% if @query %>
  <div class="page-container">
    <h4>Search results</h4>
      <div class="card__grid">
        <% if @activities.any? %>
          <% @activities[0..@activities.count].each do |activity| %>
          <div
            class="photo-card"
            style="background-image: linear-gradient(rgba(0,0,0,0.3),
              rgba(0,0,0,0.3)),
              url('<%= image_path activity.photo %>')">
            <%= activity.title %>
            <%= link_to "", activity_path(activity), class: "make-card-clickable" %>
          </div>
      <% end %>
    </div>
  <% else %>
    <div>
      <span>No results found</span>
    </div>
  <% end %>
  </div>
<% end %>
</div>
