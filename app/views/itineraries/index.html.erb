<div>
  <div>
    <h2>Current Itineraries (<%= @itineraries.count %>)</h2>
    <p>Click on an itinerary to view more details</p>
  </div>
  <div>
    <% @itineraries.each do |itinerary| %>
      <div class="card-detail d-flex justify-content-between">
        <h2><%= itinerary.title %></h2>
          <ul><%= itinerary.description %></ul>
            <ul><%= itinerary.start_date.strftime("%d %b %Y") %></ul>
            <ul><%= itinerary.end_date.strftime("%d %b %Y") %></ul>
          <ul><%= link_to "VIEW", itinerary_path(itinerary), class: 'btn btn-primary'%></ul>
      </div>
    <% end %>
  </div>
</div>

